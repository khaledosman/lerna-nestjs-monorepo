{
  "packages": [
    "packages/*",
    "nest-project"
  ],
  "npmClient": "npm",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "**/__tests__/**",
        "**/test/**",
        "**/*.md",
	      "**/*/package.json",
        "**/*.json",
        "**/*/.eslintrc.js",
        "**/*.git*"
      ],
      "registry": "private-npm-registry-here"
    },
    "version": {
      "conventionalCommits": true
    },
    "bootstrap": {
      "scope": [
        "@myscope/*"
      ]
    }
  }
}
