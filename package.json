{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "nodemon",
    "watch": "yarn bootstrap && lerna run watch --parallel",
    "build": "yarn bootstrap && yarn tsc",
    "tsc": "lerna run tsc --parallel",
    "bootstrap": "lerna bootstrap",
    "clean": "rm -rf lib/ packages/**/lib/** && lerna clean",
    "publish": "yarn tsc && lerna publish",
    "commit": "npx git-cz",
    "release": "yarn publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx standardx packages/**/*.ts src/**/*.ts --fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^16.4.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "husky": "^4.3.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.12",
    "standardx": "^7.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {}
}